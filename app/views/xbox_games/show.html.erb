<div class="container" style="max-width:970px;">
  <div class="row">
    <div class="col-md-8" style="margin-top: 3em;">
      <div class="row">
        <div class="col-md-3">
          <img class="game-image img-responsive" src="<%= @custom_api.image_meta @game.hex_id %>" />
        </div>
        <div class="col-md-9">
          <h1 class="page-header" style="margin-top:0;"><%= @game.name %></h1>
          <p><span class="glyphicon glyphicon-time"></span> Last played on <%= @game.last_played.strftime("%B %d, %Y") %></p>
          <p><span><%= image_tag("http://i194.photobucket.com/albums/z37/scabbabca/gamerscore_zps5uysjgb2.png", :style => "padding-right: 3px") %></span><%= @game.current_gamerscore %> / <%= @game.total_gamerscore %></p>
          <p><span><%= image_tag("http://i194.photobucket.com/albums/z37/scabbabca/achievement_zpsmd7srxoc.png", :style => "padding-right: 3px") %></span><%= @game.current_achievements %> / <%= @game.total_achievements %></p>
        </div>
      </div>

      <hr>

      <% @game.achievements.each do |achievement| %>
      <div class="row" style="padding-bottom:5px;">
        <div class="col-md-2">
          <img src="<%= achievement.url %>" />
        </div>
        <div class="col-md-10">
          <h4 class="page-header" style="margin-top:0px;margin-bottom:0px;padding-bottom:2px;"><%= achievement.name %>
          <p style="margin-bottom:5px;float: right;font-size: 15px;"><span><%= image_tag("http://i194.photobucket.com/albums/z37/scabbabca/gamerscore_zps5uysjgb2.png", :style => "padding-right: 3px;padding-bottom: 2px;") %></span><%= achievement.value %></p></h4>
          <p><%= achievement.description %></p>
        </div>
      </div>
      <% end %>
    </div>

    <div class="col-md-4">
      <div id="xbox-gamercard" class="well">
        <div><p><img src="http://card.xboxgamertag.com/gamercard/THROWXDOWN/oldxbox/card.png" /></p></div>
      </div>

      <div id="game-meta" class="well">
        <h4>Details</h4>
        <h5>Release Date</h5>
          <p><%= @game.release_date.strftime("%B %d, %Y") %></p>
        <h5>Developer</h5>
          <p><%= @game.developer %></p>
        <h5>Publisher</h5>
          <p><%= @game.publisher %></p>
        <h5>Genre</h5>
          <p><%= @game.genre %>, <%= @game.sub_genre %></p>
        <h5>Description</h5>
          <p><%= @game.description %></p>
      </div>

      <div id="refine-achievements" class="well">
        <h4>Category</h4>
        <div class="row">
          <div class="col-lg-6">
            <ul class="list-unstyled">
              <li><a href="#">Platinum</a></li>
              <li><a href="#">Gold</a></li>
              <li><a href="#">Silver</a></li>
              <li><a href="#">Bronze</a></li>
            </ul>
          </div>
          <div class="col-lg-6">
            <ul class="list-unstyled">
              <li><a href="#">N/A</a></li>
              <li><a href="#">N/A</a></li>
              <li><a href="#">N/A</a></li>
              <li><a href="#">N/A</a></li>
            </ul>
          </div>
        </div>
      </div>

      <div id="twitter-widget" class="well">
        <a class="twitter-timeline"  href="https://twitter.com/gameinformer" data-widget-id="734888756453494784">Tweets by @gameinformer</a>
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
      </div>
    </div>
  </div>
</div>
