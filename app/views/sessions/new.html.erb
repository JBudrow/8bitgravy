<h3>Sign in</h3>

<%= form_tag session_path do %>
  <div class="field">
    <%= label_tag :email, params[:email] %><br />
    <%= email_field_tag :email %>
  </div>

  <div class="field">
    <%= label_tag :password, params[:password] %><br />
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag "log in" %>
  </div>
<% end %>
